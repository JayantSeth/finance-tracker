<h2>User Details</h2>
<div class="card card-header results-block">
  <table class="col-md-12">
  <tbody>
    <tr>
      <td><strong>Email: </strong> <%= @user.email %></td>
      <td><strong>First name: </strong> <%= @user.first_name %></td>
      <td><strong>Last name: </strong> <%= @user.last_name %></td>
      <td>
      <% if current_user.can_follow_friend?(@user.id) %>
        <%= link_to 'Follow', friendships_path(friend_id: @user.id), 
                                      class: "btn btn-xs btn-success", method: :post %> 
      <% else %> 
        <span class="badge badge-secondary"> 
          You are friends
        </span>
      </td>
      <% end %>
    </tr>
  </tbody>
  </table>
</div>


<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% else %>
  <p class='lead'>This user is not tracking any stocks </p>
<% end %>
