<div class="row">
<div class="col-9">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th scope="col">Email ID</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.email != current_user.email %>
        <tr>
          <td><%= friend.email %></td>
          <th scope="row"><%= friend.first_name %></th>
          <td><%= friend.last_name %></td>
          <td><%= link_to 'View Profile', user_path(friend), class: 'btn btn-sm btn-success' %>
              <%= link_to 'Stop following', friendship_path(friend), method: :delete, data: {confirm: 'Are you sure?'}, 
                                      class: 'btn btn-sm btn-warning' %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
</div>
